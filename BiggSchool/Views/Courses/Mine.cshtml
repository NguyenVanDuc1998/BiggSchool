
@model  IEnumerable<BiggSchool.Models.Course>
@{
    ViewBag.Title = "Mine";
}

<h2>Mine</h2>


<ul class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="moth">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <div class="lecture">
                    @course.Lecturer.Name
                   
                </div>
                <div class="category">
                    @course.Category.Name

                   
                </div>
            </div>
            <div class="action">
                <a href="">Edit</a> 
                <a href="">Delete</a>
            </div>
        </li>
    }


</ul>